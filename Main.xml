<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/splash_screen_back"
    >

    <ImageView
        android:id="@+id/img_string"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/stringupscreenicon"
        />
    <TextView
        android:id="@+id/tv_string"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="String-u"
        android:textColor="@color/black"
        android:layout_marginTop="-15dp"
        android:fontFamily="@font/black_ops_one"
        android:textSize="26dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/img_string"
        />

    <ImageView
        android:id="@+id/powerp"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_below="@id/img_string"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-11dp"
        android:layout_toEndOf="@+id/tv_string"
        android:src="@drawable/powerp" />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:background="@drawable/btn_skip_back"
        android:text="skip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/powerp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/sign_back_screen">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_forget"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_login"
            android:fontFamily="@font/oswald"
            android:text="Login"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_begin"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"
            android:text="OTP"

            />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_otp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_back"
            android:fontFamily="@font/oswald"
            android:text="Sign up"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_marginStart="15dp"
            android:hint="user name" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_password"
            android:layout_marginStart="15dp"
            android:hint="password" />

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/oswald"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="34dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_tv"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins"
            android:text="Username"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_username"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins"
            android:text="password"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="forget password"
            android:textColor="@color/purple_200" />

        <TextView
            android:id="@+id/dont_accoutn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Dont't have account?"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dont_accoutn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Begin with" />


        <View
            android:id="@+id/line1"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_below="@id/dont_accoutn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/tv_begin"
            android:background="@color/black" />

        <View
            android:id="@+id/line2"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_below="@id/dont_accoutn"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/tv_begin"
            android:background="@color/black" />
            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>




</RelativeLayout>
